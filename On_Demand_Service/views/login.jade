extends layout

block content
    div(class="container")
        div(class="row")
            div(class="box")
                div(class="col-lg-12 text-center")
                    h4 You seem to have already registered! Please login with your Uber Id and password
                    form(role="form", action="/business/blogin", method="post")
                        div(class="row")
                            div(class="form-group col-lg-4")
                                label Id
                                input(type="text", name='sm_id', id='sm_id', required='true', class="form-control", value='58934997', placeholder="Uber Id")
                        div(class="row")
                            div(class="form-group col-lg-4")
                                label Password
                                input(type="password", name='password', id='password', value='password', required='true', class="form-control", placeholder="Password")
                        div(class="row")
                            button(type="submit", id="sbsignupformsubmit", class="btn btn-default") Submit
                            button(type="reset", class="btn btn-default") Reset