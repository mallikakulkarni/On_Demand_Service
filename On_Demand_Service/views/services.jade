extends layout

block content
    div(class="container")
        div(class="row")
            div(class="box")
                div(class="col-lg-12 text-center")
                    h4 Services
                    table
                        thead
                            tr
                                td Sr No
                                td Service
                                td Description
                        tbody
                            each service, i in services
                                tr
                                    td= i+1
                                    td= service.name
                                    td= service.description

