extends layout

block content
    div(class="container")
        div(class="row")
            div(class="box")
                div(class="col-lg-12")
                    hr
                    h2(class="intro-text text-center") Welcome to&nbsp
                        strong Uber
                    hr
                div(class="col-lg-12 text-center")
                    img(class="img-responsive img-border img-full", src="images/6.jpg", alt="")
                    hr
                    h2 Find a contractor you can trust
        div(class="row")
            div(class="box")
                div(class="col-lg-12 text-center")
                    hr
                    div(class="btn-group btn-btn-group-justified", role="group")
                        a(type="button", class="btn btn-default btn-lg", href="/users") BROWSE SERVICES
                        a(type="button", class="btn btn-default btn-lg", href="/users") BROWSE CONTRACTORS
                    hr
        div(class="row")
            div(class="box")
                div(class="col-lg-12 text-center")
                    hr
                    p Are you a contractor?&nbsp
                        a(data-toggle="modal", data-target="#sbloginmodal") Log in &nbsp
                        span or&nbsp
                        a(data-toggle="modal", data-target="#sbsignupmodal") Sign up
                    p Handyman? &nbsp
                        a(data-toggle="modal", data-target="#csignupmodal") Log In
                    hr
        div(class="modal fade", id="csignupmodal", tabindex="-1", role="dialog", aria-labelledby="cloginLabel")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;
                        h4(class="modal-title", id="cloginLabel") Log In
                    div(class="modal-body")
                        form(role="form")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Your Employer's Id
                                    input(type="text", class="form-control", placeholder="Uber Id")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Your Contractor Id
                                    input(type="text", class="form-control", placeholder="Contractor Id")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Password
                                    input(type="password", class="form-control", placeholder="Password")
                    div(class="modal-footer")
                        button(type="submit", class="btn btn-default", data-dismiss="modal") Submit
                        button(type="button", class="btn btn-default", data-dismiss="modal") Reset
        div(class="modal fade", id="sbloginmodal", tabindex="-1", role="dialog", aria-labelledby="sbloginLabel")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;
                        h4(class="modal-title", id="sbloginLabel") Log In
                    div(class="modal-body")
                        form(role="form")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Your Uber Id
                                    input(type="text", class="form-control", placeholder="Uber Id")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Password
                                    input(type="password", class="form-control", placeholder="Password")
                    div(class="modal-footer")
                        button(type="submit", class="btn btn-default", data-dismiss="modal") Submit
                        button(type="button", class="btn btn-default", data-dismiss="modal") Reset
        div(class="modal fade", id="sbsignupmodal", tabindex="-1", role="dialog", aria-labelledby="sbsignupLabel")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                            span(aria-hidden="true") &times;
                        h4(class="modal-title", id="sbsignupLabel") Log In
                    div(class="modal-body")
                        form(role="form")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Contact Name
                                    input(type="text", class="form-control", placeholder="Contact Name")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Email
                                    input(type="email", class="form-control", placeholder="Email")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Password
                                    input(type="password", class="form-control", placeholder="Password")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Street Address
                                    input(type="text", class="form-control", placeholder="Street Address")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label States
                                    input(list="states")
                                    datalist(id="states")
                                        option(value="CA")
                                        option(value="NY")
                                        option(value="NV")
                                        option(value="TX")
                                        option(value="WA")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label City
                                    input(list="city")
                                    datalist(id="city")
                                        option(value="San Jose")
                                        option(value="San Francisco")
                                        option(value="Sacramento")
                                        option(value="Los Angeles")
                                        option(value="San Diego")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Zip
                                    input(type="text", class="form-control", placeholder="Zip")
                            div(class="row")
                                div(class="form-group col-lg-4")
                                    label Phone Number
                                    input(type="text", class="form-control", placeholder="Phone number")
                    div(class="modal-footer")
                        button(type="submit", class="btn btn-default", data-dismiss="modal") Submit
                        button(type="button", class="btn btn-default", data-dismiss="modal") Reset
    include footer
    script(type="text/javascript").






